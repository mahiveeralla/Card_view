<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/city">
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="MAHENDRA"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:textSize="40dp"
        android:id="@+id/button"
        android:textColor="#1f2af1"
        android:background="@drawable/lady"/>
    <TextView
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:text="MAHENDRA CHOWDARY"
        android:layout_below="@+id/button"
        android:textColor="#ee25f9"
        android:textSize="35dp"
        android:id="@+id/ladygirl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ladygirl"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/usa"
        android:foregroundGravity="center_vertical"
        android:id="@+id/usa"
        android:layout_marginLeft="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahendra"
        android:textSize="20dp"
        android:textColor="#2b45d7"
        android:id="@+id/textView10"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />
</RelativeLayout>